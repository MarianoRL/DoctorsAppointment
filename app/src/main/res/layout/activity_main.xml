<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        style="@style/EditTextPatient"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:hint="Nombre del Paciente"
        android:inputType="textPersonName" />

    <EditText
        style="@style/EditTextPatient"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:hint="Apellido del Paciente"
        android:inputType="textPersonName" />

    <EditText
        style="@style/EditTextPatient"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:hint="Edad del Paciente"
        android:inputType="number" />


    <EditText
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:hint="Correo Electronico"
        android:inputType="textEmailAddress"
        style="@style/EditTextPatient"/>

    <EditText
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:hint="Telefono"
        android:inputType="phone"
        android:maxLength="10"
        style="@style/EditTextPatient"/>

    <EditText
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:hint="NÂ° Tarjeta"
        android:inputType="number"
        android:maxLength="16"
        style="@style/EditTextPatient"/>

    <EditText
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:hint="CCV"
        android:inputType="numberPassword"
        android:maxLength="4"
        style="@style/EditTextPatient"/>

    <Spinner
        android:id="@+id/BloodType"
        android:layout_width="361dp"
        android:layout_height="wrap_content">
        style="@style/EditTextPatient"
    </Spinner>

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"></DatePicker>

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"></TimePicker>

    <Button
        android:id="@+id/Enviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar Cita" />

</LinearLayout>
</ScrollView>